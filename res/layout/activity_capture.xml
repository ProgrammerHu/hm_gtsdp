<?xml version="1.0" encoding="utf-8"?>
<!-- 二维码界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/sqCodeTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_blue"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" >

            <ImageView
                android:id="@+id/imageQuitActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_image_none_red"
                android:padding="15dp"
                android:src="@drawable/image_quit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center" >

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描二维码"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="right|center_vertical" >

            <ImageView
                android:id="@+id/imageOpenLight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_image_none_red"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/lightning" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="您还未登录？"
                android:textColor="#3f3f3f"
                android:textSize="@dimen/textsize_8" />

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="@dimen/margin_30"
                android:background="@drawable/bt_submit"
                android:paddingBottom="@dimen/margin_20"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="@dimen/margin_20"
                android:text="去登录"
                android:textColor="@color/word_black"
                android:textSize="@dimen/textsize_8" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <SurfaceView
            android:id="@+id/preview_view"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center" />

        <com.hemaapp.hm_gtsdp.zxing.view.ViewfinderView
            android:id="@+id/viewfinder_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearlayout"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:paddingRight="15dp"
            android:layout_alignParentBottom="true" 
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/scan_text"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_8" 
                android:id="@+id/txtTop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/scan_text2"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_7"
                android:id="@+id/txtBottom" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>