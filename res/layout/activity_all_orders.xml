<?xml version="1.0" encoding="utf-8"?>
<!-- 全部订单 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_blue" >

        <ImageView
            android:id="@+id/imageQuitActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_image_none_red"
            android:padding="15dp"
            android:src="@drawable/image_quit" />
        <RadioGroup 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           	android:layout_centerHorizontal="true"
           	android:layout_centerVertical="true"
           	android:background="@drawable/bg_linearlayout_small"
           	android:padding="2dp"
           	android:id="@+id/radioGroup"
            >
            <RadioButton 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发货订单"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:button="@null"
                android:textColor="@color/selector_text_tab3"
                android:background="@drawable/bg_title_select"
                android:id="@+id/rbtnLeft"
                />
            <RadioButton 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货订单"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:button="@null"
                android:textColor="@color/selector_text_tab3"
                android:background="@drawable/bg_title_select"
                android:id="@+id/rbtnRight"
                />
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/blue_line" >
    </LinearLayout>
	<com.hemaapp.hm_gtsdp.view.MyViewPager 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/myViewPager"
	    ></com.hemaapp.hm_gtsdp.view.MyViewPager>
</LinearLayout>