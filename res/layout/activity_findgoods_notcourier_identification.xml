<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/father">
    <include layout="@layout/header_quit_text_text"/>
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!-- 身份证部分 -->
            <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:padding="15dp"
			    android:background="@color/white"
			    android:orientation="vertical"
			    >
			    <LinearLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        >
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="身份证证件"
			            android:textSize="@dimen/textsize_9"
			            android:textColor="@color/black"
			            />
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="请上传高清照片"
			            android:textSize="@dimen/textsize_8"
			            />
			    </LinearLayout>
			    <LinearLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        android:layout_marginTop="10dp"
			        >
			        <LinearLayout 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@color/main_blue"
			            android:padding="10dp"
			            android:id="@+id/layout1"
			            >
				        <TextView 
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:ems="1"
				            android:text="身份证正面"
				            android:textColor="@color/white"
				            />
			        </LinearLayout>
			        <RelativeLayout 
			            android:layout_width="90dp"
			            android:layout_height="match_parent"
				        android:background="@drawable/bg_image_layout"
				        android:id="@+id/layout11"
			            >
				        <ImageView 
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:src="@drawable/camera_big"
				            android:layout_centerHorizontal="true"
				            android:layout_centerVertical="true"
				            android:id="@+id/imageFace"
				            android:scaleType="center"
				            />
				        <ImageButton
				            android:id="@+id/deleteFace"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_alignParentRight="true"
				            android:background="@drawable/bg_button_image_delete" 
				            android:visibility="gone"/>
				    </RelativeLayout>
				    <View 
				        android:layout_width="10dp"
				        android:layout_height="match_parent"
				        />
			        
			        <LinearLayout 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@color/main_blue"
			            android:padding="10dp"
			            android:id="@+id/layout2"
			            >
				        <TextView 
				            android:layout_width="wrap_content"
			            	android:layout_height="wrap_content"
				            android:ems="1"
				            android:text="身份证反面"
				            android:textColor="@color/white"
				            />
			        </LinearLayout>
			        <RelativeLayout 
			            android:layout_width="90dp"
			            android:layout_height="match_parent"
				        android:background="@drawable/bg_image_layout"
			            android:id="@+id/layout22"
			            >
				        <ImageView 
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:src="@drawable/camera_big"
				            android:layout_centerHorizontal="true"
				            android:layout_centerVertical="true"
				            android:id="@+id/imageBack"
				            android:scaleType="center"
				            />
				        <ImageButton
				            android:id="@+id/deleteBack"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_alignParentRight="true"
				            android:background="@drawable/bg_button_image_delete" 
				            android:visibility="gone"/>
				    </RelativeLayout>
			    </LinearLayout>
			</LinearLayout>
            
            
            
            <!-- 手持部分 -->
            <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:padding="15dp"
			    android:background="@color/white"
			    android:orientation="vertical"
			    android:layout_marginTop="10dp"
			    >
			    <LinearLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        >
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="上传手持身份证正面半身照"
			            android:textSize="@dimen/textsize_9"
			            android:textColor="@color/black"
			            />
			    </LinearLayout>
			    <LinearLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        android:layout_marginTop="10dp"
			        >
			        <LinearLayout 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@color/main_blue"
			            android:padding="10dp"
			            android:id="@+id/layout3"
			            >
				        <TextView 
				            android:layout_width="wrap_content"
			           		android:layout_height="wrap_content"
				            android:ems="1"
				            android:text="身份证正面"
				            android:textColor="@color/white"
				            />
			        </LinearLayout>
			        <RelativeLayout 
			            android:layout_width="90dp"
			            android:layout_height="match_parent"
				        android:background="@drawable/bg_image_layout"
			            android:id="@+id/layout33"
			            >
				        <ImageView 
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:src="@drawable/camera_big"
				            android:layout_centerHorizontal="true"
				            android:layout_centerVertical="true"
				            android:id="@+id/imagePerson"
				            android:scaleType="center"
				            />
				        <ImageButton
				            android:id="@+id/deletePerson"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_alignParentRight="true"
				            android:background="@drawable/bg_button_image_delete" 
				            android:visibility="gone"/>
				    </RelativeLayout>
				    
			        <LinearLayout 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@color/main_blue"
			            android:padding="10dp"
			            android:visibility="invisible"
			            >
				        <TextView 
				            android:layout_width="wrap_content"
			           		android:layout_height="wrap_content"
				            android:ems="1"
				            android:text="身份证正面"
				            android:textColor="@color/white"
				            />
			        </LinearLayout>
			    </LinearLayout>
			</LinearLayout>
			
            
            <!-- 第三部分 -->
            <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingLeft="15dp"
			    android:background="@color/white"
			    android:orientation="vertical"
			    android:layout_marginTop="10dp"
			    >
			    <RelativeLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:paddingTop="10dp"
			        android:paddingRight="15dp"
			        android:paddingBottom="10dp"
			        >
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="真实姓名"
			            android:id="@+id/txt1"
			            android:textColor="@color/black"
			            android:layout_centerVertical="true"
			            android:textSize="@dimen/textsize_8.5"
			            />
			        <ImageView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:src="@drawable/arrow_right"
			            android:layout_alignParentRight="true"
			            android:id="@+id/image1"
			            android:layout_centerVertical="true"
			            android:layout_marginLeft="15dp"
			            />
			        <EditText 
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:id="@+id/editRealName"
			            android:singleLine="true"
			            android:background="@null"
			            android:gravity="right"
			            android:layout_toLeftOf="@id/image1"
			            android:layout_toRightOf="@id/txt1"
			            android:hint="请填写"
			            android:layout_centerVertical="true"
			            />
			    </RelativeLayout>
			    <View 
			        android:layout_width="match_parent"
			        android:layout_height="1px"
			        android:background="@color/grey_line"
			        />
			    <RelativeLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:paddingTop="10dp"
			        android:paddingRight="15dp"
			        android:paddingBottom="10dp"
			        >
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="联系电话"
			            android:id="@+id/txt2"
			            android:textColor="@color/black"
			            android:layout_centerVertical="true"
			            android:textSize="@dimen/textsize_8.5"
			            android:singleLine="true"
			            android:inputType="phone"
			            />
			        <ImageView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:src="@drawable/arrow_right"
			            android:layout_alignParentRight="true"
			            android:id="@+id/image2"
			            android:layout_centerVertical="true"
			            android:layout_marginLeft="15dp"
			            />
			        <EditText 
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:id="@+id/editTelPhone"
			            android:singleLine="true"
			            android:background="@null"
			            android:gravity="right"
			            android:layout_toLeftOf="@id/image2"
			            android:layout_toRightOf="@id/txt2"
			            android:hint="请填写"
			            android:layout_centerVertical="true"
			            android:inputType="phone"
			            android:maxLength="15"
			            />
			    </RelativeLayout>
			    <View 
			        android:layout_width="match_parent"
			        android:layout_height="1px"
			        android:background="@color/grey_line"
			        />
			    <RelativeLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:paddingTop="10dp"
			        android:paddingRight="15dp"
			        android:paddingBottom="10dp"
			        >
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="家庭住址"
			            android:id="@+id/txt3"
			            android:textColor="@color/black"
			            android:layout_centerVertical="true"
			            android:textSize="@dimen/textsize_8.5"
			            />
			        <ImageView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:src="@drawable/arrow_right"
			            android:layout_alignParentRight="true"
			            android:id="@+id/image3"
			            android:layout_centerVertical="true"
			            android:layout_marginLeft="15dp"
			            />
			        <EditText 
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:id="@+id/editRealAddress"
			            android:singleLine="true"
			            android:background="@null"
			            android:gravity="right"
			            android:layout_toLeftOf="@id/image3"
			            android:layout_toRightOf="@id/txt3"
			            android:hint="请填写"
			            android:layout_centerVertical="true"
			            />
			    </RelativeLayout>
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_marginLeft="15dp"
			    android:layout_marginTop="10dp"
			    >
			    <ImageView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/heart"
			        android:layout_gravity="center_vertical"
			        />
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="温馨提示：信息提交后需等待审核，请耐心等待"
			        android:layout_marginLeft="10dp"
			        android:layout_gravity="center_vertical"
			        />
			</LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
