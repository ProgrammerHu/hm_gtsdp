<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout   
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content"  
    android:gravity="center_horizontal"  
    android:orientation="vertical"  
    android:background="#60ADADAD"
	>  
	<LinearLayout 
		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
	    android:background="@color/white"
	    android:layout_alignParentBottom="true"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_line"
            android:orientation="horizontal"
            >
            <Button 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="@color/main_blue"
                android:padding="10dp"
            	android:background="@drawable/bg_btn_districts"
                android:id="@+id/btnDistrictPickerCancel"
                android:textSize="@dimen/textsize_9"
                />
            <Button  
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textColor="@color/main_blue"
                android:layout_alignParentRight="true"
                android:padding="10dp"
            	android:background="@drawable/bg_btn_districts"
                android:id="@+id/btnDistrictPickerClose"
                android:textSize="@dimen/textsize_9"
                />
        </RelativeLayout>
        
        <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
		
		    <com.hemaapp.hm_gtsdp.view.widget.WheelView
		        android:id="@+id/id_province"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1" >
		 	</com.hemaapp.hm_gtsdp.view.widget.WheelView>
		
		    <com.hemaapp.hm_gtsdp.view.widget.WheelView
		        android:id="@+id/id_site"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1" >
		    </com.hemaapp.hm_gtsdp.view.widget.WheelView>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
