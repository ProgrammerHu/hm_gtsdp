<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/header_quit_text_text"/>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_line"
        android:layout_marginTop="10dp"
        ></LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
	    android:background="@color/white"
	    android:paddingLeft="10dp"
        >
        <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/bg_answer"
	            android:text="问题一"
	            android:gravity="center"
	            android:layout_centerVertical="true"
	            android:textColor="@color/white"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="10dp"
		        android:id="@+id/txtQuestion1"
	            />
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/triangle_grey"
	            android:id="@+id/image1"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            />
		    <Spinner
		        android:id="@+id/spinner1"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		        android:layout_centerVertical="true"
		        android:layout_toLeftOf="@id/image1"
		        android:layout_toRightOf="@id/txtQuestion1"
		        />
	    </RelativeLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:background="@color/grey_line"
		    ></LinearLayout>
		<LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/white"
	        android:orientation="horizontal"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/bg_answer"
	            android:text="问题一"
	            android:gravity="center"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/white"
	            android:visibility="invisible"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="10dp"
	            />
		    <EditText
		        android:id="@+id/editText1"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		        android:hint="请填写"
		        android:background="@null"
		        android:layout_gravity="center_vertical"
		        />
	    </LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:background="@color/grey_line"
		    ></LinearLayout>
    </LinearLayout>
  
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_line"
        android:layout_marginTop="10dp"
        ></LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
	    android:paddingLeft="10dp"
	    android:background="@color/white"
        >
        <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/bg_answer"
	            android:text="问题二"
	            android:gravity="center"
	            android:layout_centerVertical="true"
	            android:textColor="@color/white"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="10dp"
		        android:id="@+id/txtQuestion2"
	            />
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/triangle_grey"
	            android:id="@+id/image2"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            />
		    <Spinner
		        android:id="@+id/spinner2"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		        android:layout_centerVertical="true"
		        android:layout_toLeftOf="@id/image2"
		        android:layout_toRightOf="@id/txtQuestion2"
		        />
	    </RelativeLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:background="@color/grey_line"
		    ></LinearLayout>
		<LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/white"
	        android:orientation="horizontal"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/bg_answer"
	            android:text="问题二"
	            android:gravity="center"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/white"
	            android:visibility="invisible"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="10dp"
	            />
		    <EditText
		        android:id="@+id/editText2"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		        android:hint="请填写"
		        android:background="@null"
		        android:layout_gravity="center_vertical"
		        />
	    </LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:background="@color/grey_line"
		    ></LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_line"
        android:layout_marginTop="10dp"
        ></LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
	    android:paddingLeft="10dp"
	    android:background="@color/white"
        >
        <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/bg_answer"
	            android:text="问题三"
	            android:gravity="center"
	            android:layout_centerVertical="true"
	            android:textColor="@color/white"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="10dp"
		        android:id="@+id/txtQuestion3"
	            />
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/triangle_grey"
	            android:id="@+id/image3"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            />
		    <Spinner
		        android:id="@+id/spinner3"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		        android:layout_centerVertical="true"
		        android:layout_toLeftOf="@id/image3"
		        android:layout_toRightOf="@id/txtQuestion3"
		        />
	    </RelativeLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:background="@color/grey_line"
		    ></LinearLayout>
		<LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/white"
	        android:orientation="horizontal"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/bg_answer"
	            android:text="问题三"
	            android:gravity="center"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/white"
	            android:visibility="invisible"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="10dp"
	            />
		    <EditText
		        android:id="@+id/editText3"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		        android:hint="请填写"
		        android:background="@null"
		        android:layout_gravity="center_vertical"
		        />
	    </LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:background="@color/grey_line"
		    ></LinearLayout>
  </LinearLayout>
  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      >
      <Button
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="@drawable/bg_button_submit_blue"
	    android:text="验证"
	    android:textSize="@dimen/textsize_9"
	    android:textColor="@color/white"
	    android:id="@+id/btnConfirm"
	    android:layout_gravity="center"
	    ></Button>
  </LinearLayout>

</LinearLayout>
