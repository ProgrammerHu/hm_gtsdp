<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_linearlayout_small"
	    	android:layout_marginLeft="10dip"
	    	android:layout_marginRight="10dip"
	    	android:paddingTop="5dp"
	    	android:paddingBottom="5dp"
            >

            <LinearLayout
                android:id="@+id/layoutQQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_click_layout"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingTop="25dp" >

                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/qqbtn"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="25dp" 
                android:id="@+id/layoutWechat"
                android:background="@drawable/bg_click_layout"
                >
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wechatbtn"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="25dp" 
                android:id="@+id/layoutQQZone"
                android:background="@drawable/bg_click_layout"
                >
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/qqzonebtn"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空间"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="25dp" 
                android:background="@drawable/bg_click_layout"
                android:id="@+id/layoutWeibo"
                >
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/weibobtn"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微博"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
	    <Button  
	        android:id="@+id/btnCancel"  
	       	android:layout_marginTop="15dip"   
	       	android:layout_marginBottom="15dip"  
	       	android:layout_width="fill_parent"  
	       	android:layout_height="wrap_content"  
	       	android:text="取消"  
	       	android:textColor="@color/main_blue"  
	    	android:layout_marginLeft="10dip"
	    	android:layout_marginRight="10dip"
	        android:background="@drawable/bg_button_dialog"
	        />  
    </LinearLayout>

</RelativeLayout>
