<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_blue"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageQuitActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_image_none_red"
            android:padding="15dp"
            android:src="@drawable/image_quit" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证手机号"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_10" 
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txtNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_image_none_red"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_9" 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            />
    </RelativeLayout>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@null"
            android:hint="输入手机号"
            android:maxLength="15"
            android:padding="15dp"
            android:singleLine="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" >

            <Button
                android:id="@+id/btnSendIdentifyCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_blue"
                android:layout_margin="10dp"
                android:text="发送验证码"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/linearRemainingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重新发送"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_8.5" />

                <TextView
                    android:id="@+id/txtRemainingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:textColor="@color/main_blue"
                    android:textSize="@dimen/textsize_9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="s"
                    android:textColor="@color/main_blue"
                    android:textSize="@dimen/textsize_9" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/grey_line"
	    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/editCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="请输入手机验证码"
            android:inputType="number"
            android:maxLength="8"
            android:padding="15dp" />

        <ImageView
            android:id="@+id/imageClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/clear"
            android:visibility="gone" />
    </RelativeLayout>
    
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/grey_line"
	    />
	
	<Button 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:text="验证"
	    android:id="@+id/btnConfirm"
	    android:textColor="@color/white"
	    android:textSize="@dimen/textsize_9"
	    android:layout_marginTop="80dp"
	    android:background="@drawable/bg_button_submit_square"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    />
	
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="客服电话：0538-4456325"
	    android:textColor="@color/main_blue"
	    android:textSize="@dimen/textsize_9"
	    android:gravity="center_horizontal"
	    android:layout_marginTop="20dp"
	    android:id="@+id/txtTel"
	    />
</LinearLayout>