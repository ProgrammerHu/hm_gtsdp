<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/background"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp">
    <Button 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="确认收货"
        android:textColor="@color/white"
        android:id="@+id/btnConfirmReceive"
        android:background="@drawable/bg_button_submit_blue"
        android:textSize="@dimen/textsize_9"
        android:visibility="gone"
        />
    <Button 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="接单"
        android:textColor="@color/white"
        android:id="@+id/btnSiteAgree"
        android:background="@drawable/bg_button_submit_blue"
        android:textSize="@dimen/textsize_9"
        android:visibility="gone"
        />
    <Button 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="接单"
        android:textColor="@color/white"
        android:id="@+id/btnSiteBAgree"
        android:background="@drawable/bg_button_submit_blue"
        android:textSize="@dimen/textsize_9"
        android:visibility="gone"
        />
    <Button 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="接单"
        android:textColor="@color/white"
        android:id="@+id/btnCursorAgree"
        android:background="@drawable/bg_button_submit_blue"
        android:textSize="@dimen/textsize_9"
        android:visibility="gone"
        />
    <Button 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="换一个"
        android:textColor="@color/main_blue"
        android:id="@+id/btnCursorChange"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_button_submit_blue_border"
        android:textSize="@dimen/textsize_9"
        android:visibility="gone"
        />
    

</LinearLayout>
